<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/darkbg"
    android:textAlignment="center"
    tools:context=".activities.SettingsActivity">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/settingsProfileImgId"
        android:layout_width="155dp"
        android:layout_height="155dp"
        android:src="@drawable/profile"
        android:layout_marginTop="10dp"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/settingsDisplayNameId"
        android:layout_width="169dp"
        android:layout_height="42dp"
        android:layout_marginTop="56dp"
        android:textColor="@color/white"
        android:text="DisplayName"
        android:textAlignment="center"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/settingsProfileImgId" />

    <TextView
        android:id="@+id/settingsStatusID"
        android:layout_width="261dp"
        android:layout_height="52dp"
        android:layout_marginTop="36dp"
        android:textColor="@color/white"
        android:text="Hey there You are Using Chat App"
        android:textAlignment="center"
        android:textStyle="bold|italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/settingsDisplayNameId" />

    <Button
        android:id="@+id/settingsProfileChangeBtn"
        android:layout_width="226dp"
        android:layout_height="55dp"
        android:layout_marginTop="28dp"
        android:text="@string/changeDisplayPic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/settingsStatusID" />

    <Button
        android:id="@+id/settingsStatusChangeBtn"
        android:layout_width="222dp"
        android:layout_height="53dp"
        android:layout_marginTop="32dp"
        android:text="@string/changeStatus"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/settingsProfileChangeBtn" />

</androidx.constraintlayout.widget.ConstraintLayout>